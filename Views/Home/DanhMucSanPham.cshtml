                                        <div class="product-default-single-item product-color--golden">
                                            <div class="image-box">
                                                <a asp-controller="Home" asp-action="SanPhamTheoDanhMuc" asp-route-maDanhMuc="@product.MaDanhMuc" class="image-link">
