                                                        }
                                                    </ul>
                                                </div>
                                                <div class="content-right">
                                                    <span class="price">@string.Format("{0:#,##0} VNĐ", product.Gia)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- End Product Default Single Item -->
                                    </div>
                                }
                            </div>
                        </div>
