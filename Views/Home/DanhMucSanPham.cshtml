                    <label for="MaCTLoai">Chi tiết loại:</label>
                    <input type="text" name="MaCTLoai" class="form-control" value="@ViewBag.CurrentMaCTLoai" />
                </div>
                <div class="form-group">
                    <label for="search">Tìm kiếm:</label>
                    <input type="text" name="search" class="form-control" value="@ViewBag.CurrentSearch" />
                </div>
                <div class="form-group">
                    <label for="minPrice">Giá tối thiểu:</label>
                    <input type="number" name="minPrice" class="form-control" value="@ViewBag.CurrentMinPrice" />
                </div>
                <div class="form-group">
                    <label for="maxPrice">Giá tối đa:</label>
                    <input type="number" name="maxPrice" class="form-control" value="@ViewBag.CurrentMaxPrice" />
                </div>
                <div class="form-group">
                    <label for="sortBy">Sắp xếp:</label>
                    <select name="sortBy" class="form-control">
                        <option value="">-- Chọn --</option>
                        <option value="price_asc" selected="@((string)ViewBag.CurrentSortBy == "price_asc" ? "selected" : "")">Giá tăng dần</option>
                        <option value="price_desc" selected="@((string)ViewBag.CurrentSortBy == "price_desc" ? "selected" : "")">Giá giảm dần</option>
                        <option value="name_asc" selected="@((string)ViewBag.CurrentSortBy == "name_asc" ? "selected" : "")">Tên A-Z</option>
                        <option value="name_desc" selected="@((string)ViewBag.CurrentSortBy == "name_desc" ? "selected" : "")">Tên Z-A</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </form>

            <br />

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Tên</th>
                        <th>Hãng</th>
                        <th>Chi tiết loại</th>
                        <th>Giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaDanhMuc</td>
                            <td>@item.TenDanhMuc</td>
                            <td>@item.MaHang</td>
                            <td>@item.MaCtloai</td>
                            <td>@item.Gia</td>
                        </tr>
                    }
                </tbody>
            </table>


            <!-- End Product Grid View -->

            <div id="pagination" class="page-pagination text-center aos-init aos-animate" data-aos="fade-up" data-aos-delay="0">
                <ul>
                    @if (Model.HasPreviousPage)
                    {
                        <li><a href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = 1 })">&lt;&lt; Đầu</a></li>
                        <li><a href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = Model.PageNumber - 1 })">&lt; Trước</a></li>
                    }

                    <li><a href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = 1 })">1</a></li>

                    @if (Model.PageNumber > 3)
                    {
                        <li><span>...</span></li>
                    }

                    @for (int i = Model.PageNumber - 1; i <= Model.PageNumber + 1; i++)
                    {
                        if (i > 1 && i < Model.PageCount)
                        {
                            <li><a class="@(i == Model.PageNumber ? "active" : "")" href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = i })">@i</a></li>
                        }
                    }

                    @if (Model.PageNumber < Model.PageCount - 2)
                    {
                        <li><span>...</span></li>
                    }

                    @if (Model.PageCount > 1)
                    {
                        <li><a class="@(Model.PageCount == Model.PageNumber ? "active" : "")" href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = Model.PageCount })">@Model.PageCount</a></li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li><a href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = Model.PageNumber + 1 })">Tiếp theo &gt;</a></li>
                        <li><a href="@Url.Action("DanhMucSanPham", new { mahang = ViewBag.Mahang, page = Model.PageCount })">Cuối &gt;&gt;</a></li>
                    }
                </ul>

                <div class="so-trang">
                    <span>Sản phẩm: @Model.FirstItemOnPage - @Model.LastItemOnPage / @Model.TotalItemCount</span>
                </div>
            </div>
        </div>
    </div>


</div> *@
