@model MyPhamCheilinus.Models.Account

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    MyPhamCheilinus.ModelViews.ChangePasswordViewModel changePassword1 = new MyPhamCheilinus.ModelViews.ChangePasswordViewModel();
}


<!-- Begin Main Content Area -->
<!-- Main Content Area End Here -->
<div class="card-body custom-card-body">
    <div class="account-dashboard">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <div class="dashboard_tab_button aos-init aos-animate" data-aos="fade-up" data-aos-delay="0">
                        <ul role="tablist" class="nav flex-column dashboard-list">
                            <li>
                                <a href="#account-details" data-bs-toggle="tab" class="nav-link btn btn-block btn-md btn-black-default-hover active">Tài khoản chi tiết</a>
                            </li>
                            <li><a href="~/DonHang" class="nav-link btn btn-block btn-md btn-black-default-hover">Đơn hàng</a></li>

                            <li><a href="#address" data-bs-toggle="tab" class="nav-link btn btn-block btn-md btn-black-default-hover">Đổi mật khẩu</a></li>

                            <li><a href="/dang-xuat.html" class="nav-link btn btn-block btn-md btn-black-default-hover">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">

                        <div class="tab-pane fade" id="orders">
                            <h4>Orders</h4>
                            <div class="table_page table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Order</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>May 10, 2018</td>
                                            <td><span class="success">Completed</span></td>
                                            <td>$25.00 for 1 item </td>
                                            <td><a href="cart.html" class="view">view</a></td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>May 10, 2018</td>
                                            <td>Processing</td>
                                            <td>$17.00 for 1 item </td>
                                            <td><a href="cart.html" class="view">view</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="downloads">
                            <h4>Downloads</h4>
                            <div class="table_page table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Downloads</th>
                                            <th>Expires</th>
                                            <th>Download</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Shopnovilla - Free Real Estate PSD Template</td>
                                            <td>May 10, 2018</td>
                                            <td><span class="danger">Expired</span></td>
                                            <td><a href="#" class="view">Click Here To Download Your File</a></td>
                                        </tr>
                                        <tr>
                                            <td>Organic - ecommerce html template</td>
                                            <td>Sep 11, 2018</td>
                                            <td>Never</td>
                                            <td><a href="#" class="view">Click Here To Download Your File</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="address">
                            @await Html.PartialAsync("_ChangePasswordPartialView",changePassword1)
                        </div>
                        <div class="tab-pane fade active show" id="account-details">
                            <h3>Thông tin tài khoản </h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">


                                        <form asp-action="EditAccount" method="post" id="account-form">
                                            <div class="form-group default-form-box mb-20">
                                                <label>Email:</label>
                                                <input asp-for="AccountEmail" class="form-control" />
                                            </div>
                                            <div class="form-group default-form-box mb-20">
                                                <label>Họ và tên:</label>
                                                <input asp-for="FullName" class="form-control" />
                                            </div>
                                            <div class="form-group ">
                                                <label>Giới tính:</label>
                                                <div class="input-radio">
                                                    <span class="custom-radio">
                                                        <input asp-for="GioiTinh" type="radio" value="false"> Nam
                                                    </span>
                                                    <span class="custom-radio">
                                                        <input asp-for="GioiTinh" type="radio" value="true" /> Nữ
                                                    </span>



                                                </div>
                                                <br>
                                            </div>
                                            <div class="form-group default-form-box mb-20">
                                                <label>Ngày sinh:</label>
                                                <input asp-for="NgaySinh" class="form-control " type="date" />
                                            </div>
                                            <div class="form-group default-form-box mb-20">
                                                <label>SĐT:</label>
                                                <input asp-for="Phone" class="form-control" />
                                            </div>
                                            <div class="form-group default-form-box mb-20">
                                                <label>Địa chỉ:</label>
                                                <input asp-for="DiaChi" class="form-control" />
                                            </div>




                                            <button type="submit" class="btn btn-lg btn-golden" onclick="saveChanges()">Lưu thay đổi</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .custom-card-body {
        padding: 60px; /* Điều chỉnh kích thước padding theo mong muốn */
    }

    .account_form {
        margin: 10px; /* Điều chỉnh khoảng cách giữa các yếu tố bên trong */
    }

    h3 {
        font-weight: bold;
    }

</style>
