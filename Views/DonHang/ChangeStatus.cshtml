@model MyPhamCheilinus.Models.DonHang
@{
    ViewData["Title"] = "Thay đổi" + Model.MaDonHang;
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

}
<style>
    .spacer {
        height: 20px; /* Đặt chiều cao tùy thuộc vào khoảng cách mong muốn */
    }
</style>

<div class="breadcrumb-section breadcrumb-bg-color--golden">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="breadcrumb-title">Đơn hàng</h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="/">Home</a></li>
                                <li><a href="/DanhMucSanPham/Index">Shop</a></li>
                                <li><a href="/DonHang/Index">Đơn hàng</a></li>
                                <li class="active" aria-current="page">#@Model.MaDonHang</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="faq-section">
    <div class="container">

        <div class="faq-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="faq-accordian">
                        <div class="faq-accordian-single-item aos-init aos-animate">
                            <input id="item-1" name="accordian-item" type="radio" checked="">
                            <label for="item-1">Thay đổi trạng thái đơn hàng @Model.MaDonHang</label>
                            <div class="item-content">
                                <div class="modal-body">
                                    <div class="card">

                                        <div class="card-body">



                                            <p> ID:            #@Model.MaDonHang</p>
                                            <p> Ngày mua hàng: @Model.NgayDatHang</p>
                                            <p> Số điện thoại: @Model.MaKhachHangNavigation.SoDienThoai</p>
                                            <p> Địa chỉ:       @Model.MaKhachHangNavigation.DiaChi</p>
                                            <p> Tổng tiền:     @Model.TongTien.Value.ToString("#,##0")</p>
                                            <p>
                                                Trạng thái :    @if (Model.TrangThaiDonHang == 1)
                                                {
                                                    <span class=" badge bg-success">Chờ xác nhận</span>
                                                }
                                                else if (Model.TrangThaiDonHang == 2)
                                                {
                                                    <span class="badge bg-warning">Đang vận chuyển</span>
                                                }
                                                else if (Model.TrangThaiDonHang == 3)
                                                {
                                                    <span class="badge bg-primary">Đã giao hàng</span>
                                                }
                                                else if (Model.TrangThaiDonHang == 4)
                                                {
                                                    <span class="badge bg-danger" style="background-color: #c82333">Đã hủy</span>
                                                }
                                            </p>


                                        </div>
                                    </div>
                                    <div class="card">
                                        <div class="card-body">
                                            <form asp-controller="DonHang" asp-action="ChangeStatus" asp-route-MaID="@ViewBag.CurrentMaID" asp-route-id="@Model.MaDonHang" asp-route-page="@ViewBag.CurrentPage" asp-route-Search="@ViewBag.CurrentSearch" asp-route-MinPrice="@ViewBag.CurrentMinPrice" asp-route-MaxPrice="@ViewBag.CurrentMaxPrice" asp-route-MaxPrice="@ViewBag.CurrentMaxPrice" method="post">
                                                <div asp-validation-summary="All" class="text-danger"></div>
                                                <input type="hidden" asp-for="MaDonHang" />
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        <label class="font-weight-semibold" for="productName">Cập nhật trạng Thái</label>
                                                        <div class="spacer"></div>
                                                        <select class="custom-select" id="txtMaDM" name="txtMaDM" asp-for="TrangThaiDonHang" style="min-width: 200px">
                                                            <option selected value="">Chọn trạng thái</option>
                                                            @if (Model.TrangThaiDonHang == 1)
                                                            {

                                                                <option value="4" class="enabled-option">Hủy đơn hàng</option>
                                                            }
                                                            else if (Model.TrangThaiDonHang == 3)
                                                            {
                                                                <option value="3" class="enabled-option">Đã nhận hàng</option>
                                                                <option value="4" class="enabled-option">Hủy đơn hàng</option>
                                                            }

                                                            else
                                                            {
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="spacer"></div>
                                                <button type="submit" class="btn btn-md btn-golden">Lưu thay đổi</button>
                                                <div class="spacer"></div>
                                                <button class="btn btn-secondary">
                                                    <a asp-controller="DonHang" asp-action="Index" asp-route-MaID="@ViewBag.CurrentMaID" asp-route-id="@Model.MaDonHang" asp-route-page="@ViewBag.CurrentPage" asp-route-Search="@ViewBag.CurrentSearch" asp-route-MinPrice="@ViewBag.CurrentMinPrice" asp-route-MaxPrice="@ViewBag.CurrentMaxPrice" style="color: white" asp-route-MaxPrice="@ViewBag.CurrentMaxPrice">Trở lại</a>
                                                </button>
                                            </form>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


